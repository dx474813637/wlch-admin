{
	"bsonType": "object",
	"permission": {
		"create": "auth.uid != null",
		"delete": "doc.user_id == auth.uid",
		"read": "doc.user_id == auth.uid && doc.article_status == 0 || doc.article_status == 1",
		"update": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（用户 ID），系统自动生成"
		},
		"article_status": {
			"bsonType": "int",
			"defaultValue": 0,
			"description": "文章状态：0 草稿箱 1 已发布",
			"enum": [{
				"text": "草稿箱",
				"value": 0
			}, {
				"text": "已发布",
				"value": 1
			}],
			"title": "文章状态"
		},
		"avatar": {
			"bsonType": "string",
			"description": "缩略图地址",
			"label": "封面大图",
			"title": "封面大图",
			"trim": "both"
		},
		"category_id": {
			"bsonType": "string",
			"description": "分类 id",
			"enum": {
				"collection": "creation-categories",
				"field": "name as text, menu_id as value"
			},
			"foreignKey": "creation-categories.menu_id",
			"title": "分类"
		},
		"industry_id": {
			"bsonType": "string",
			"description": "行业 id",
			"enum": {
				"collection": "creation-industry",
				"field": "name as text, menu_id as value"
			},
			"foreignKey": "creation-industry.menu_id",
			"title": "行业"
		},
		"comment_count": {
			"bsonType": "int",
			"description": "评论数量",
			"permission": {
				"write": false
			}
		},
		"comment_status": {
			"bsonType": "int",
			"description": "评论状态：0 关闭  1 开放",
			"enum": [{
				"text": "关闭",
				"value": 0
			}, {
				"text": "开放",
				"value": 1
			}],
			"title": "开放评论"
		},
		"content": {
			"bsonType": "string",
			"description": "文章内容",
			"label": "文章内容",
			"title": "文章内容",
			"trim": "right"
		},
		"excerpt": {
			"bsonType": "string",
			"description": "文章摘录",
			"label": "摘要",
			"title": "文章摘录",
			"trim": "both"
		},
		"is_essence": {
			"bsonType": "bool",
			"description": "阅读加精",
			"permission": {
				"write": false
			},
			"title": "阅读加精"
		},
		"is_sticky": {
			"bsonType": "bool",
			"description": "是否置顶",
			"permission": {
				"write": false
			},
			"title": "是否置顶"
		},
		"last_comment_user_id": {
			"bsonType": "string",
			"description": "最后回复用户 id，参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id"
		},
		"last_modify_date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			},
			"description": "最后修改时间",
			"title": "最后修改时间"
		},
		"last_modify_ip": {
			"bsonType": "string",
			"description": "最后修改时 IP 地址",
			"forceDefaultValue": {
				"$env": "clientIP"
			}
		},
		"like_count": {
			"bsonType": "int",
			"description": "喜欢数、点赞数",
			"permission": {
				"write": false
			}
		},
		"mode": {
			"bsonType": "number",
			"description": "排版显示模式,如左图右文、上图下文等",
			"title": "排版显示模式"
		},
		"publish_date": {
			"bsonType": "timestamp",
			"defaultValue": {
				"$env": "now"
			},
			"description": "发表时间",
			"title": "发表时间"
		},
		"publish_ip": {
			"bsonType": "string",
			"description": "发表时 IP 地址",
			"forceDefaultValue": {
				"$env": "clientIP"
			},
			"title": "发布文章时IP地址"
		},
		"title": {
			"bsonType": "string",
			"description": "标题",
			"label": "标题",
			"title": "标题",
			"trim": "both"
		},
		"user_id": {
			"bsonType": "string",
			"defaultValue": {
				"$env": "uid"
			},
			"description": "文章作者ID， 参考`uni-id-users` 表",
			"foreignKey": "uni-id-users._id"
		},
		"view_count": {
			"bsonType": "int",
			"description": "阅读数量",
			"permission": {
				"write": false
			},
			"title": "阅读数量"
		}
	},
	"required": ["user_id", "title", "content"]
}
