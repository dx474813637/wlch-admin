{
	"bsonType": "object",
	"permission": {
		"create": "auth.uid != null",
		"delete": "doc.user_id == auth.uid",
		"read": true,
		"update": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"auth_id": {
			"bsonType": "string",
			"description": "被关注者（对方）id，参考uni-id-users表",
			"foreignKey": "uni-id-users._id"
		},
		"user_id": {
			"bsonType": "string",
			"description": "关注者id，参考uni-id-users表",
			"forceDefaultValue": {
				"$env": "uid"
			},
			"foreignKey": "uni-id-users._id"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "收藏时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	},
	"required": ["user_id", "auth_id"]
}
